<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th>No</th>
                    <th scope="col">Category Name</th>
                    <th scope="col">Sub Category Name</th>
                    <th scope="col">Action</th>
                    
                </tr>
            </thead>
            <tbody>
                {{#if subcategory}}
                    {{#each subcategory}}
                    <tr>
                        <td>{{math @index '+' 1}}</td>
                        <td>{{this.category_name}}</td>
                        <td>{{this.sub_category_name}}</td>
                        <td>
                            <a href="/admin/edit-sub-category/{{this.sub_category_id}}"><button type="button" class="btn btn-primary">Edit</button></a>
                            <a href="/admin/delete-sub-category/{{this.sub_category_id}}" onclick="return confirm('Are you sure to want delete sub category {{this.category_name}}')"><button type="button" class="btn btn-danger">Delete</button></a>
                        </td>
                        
                        
                    </tr>
                    {{/each}}
                {{else}}
                    <tr>
                            <h3 style="text-align: center;">No Sub Categories Found</h3>
                    </tr>
                {{/if}}
            </tbody>
        </table>
        <hr>
        
    </div>
    
</section>


