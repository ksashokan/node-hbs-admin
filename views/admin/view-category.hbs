<section>
    <div class="container">
        <table class="table mt-5" id="categoryTable">
            <thead>
                <tr>
                    <th>No</th>
                    <th scope="col">Category Name</th>
                    <th scope="col">Action</th>
                    
                </tr>
            </thead>
            <tbody>
                {{#if category}}
                    {{#each category}}
                    <tr>
                        <td>{{math @index '+' 1}}</td>
                        <td>{{this.category_name}}</td>
                        <td>
                            <a href="/admin/edit-category/{{this._id}}"><button type="button" class="btn btn-primary">Edit</button></a>
                            <a href="/admin/delete-category/{{this._id}}" onclick="return confirm('Are you sure to want delete category {{this.category_name}}')"><button type="button" class="btn btn-danger">Delete</button></a>
                        </td>
                        
                        
                    </tr>
                    {{/each}}
                {{else}}
                    <tr>
                            <h3 style="text-align: center;">No Categories Found</h3>
                    </tr>
                {{/if}}
            </tbody>
        </table>
        <hr>
        
    </div>
    
</section>

